{
  "name": "@wya/vue-scaffold",
  "version": "1.0.11",
  "private": true,
  "description": "basic env for vue",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run prompt && npm run all",
    "serve": "node --max_old_space_size=8192 ./node_modules/.bin/webpack-dev-server --config  ./config/webpack.config.dev.js --hot",
    "dist": "npm run remove:dist && npm run lint && node --max_old_space_size=8192 ./node_modules/.bin/webpack --config ./config/webpack.config.dist.js",
    "build": "cross-env UGLIFY_JS=true npm run dist -- -p && npm run copy",
    "build:dev": "cross-env UGLIFY_JS=false npm run dist && npm run copy",
    "remove:dist": "rm -rf ./dist",
    "clear": "rm -rf ./node_modules/.cache",
    "copy": "echo 'end'",
    "lint": "esw config ./src/pages --ext .vue,.js --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --fix --watch",
    "lint:style": "stylelint --fix --syntax scss src",
    "mock": "cd ./src/mock && npm run start",
    "prompt": "node ./config/prompt.config.js",
    "all": "cross-env BB=development npm-run-all --parallel --race --continue-on-error lint:watch serve",
    "test": "jest --config ./tests/config/jest.config.js",
    "add": "wya-vue add",
    "create": "wya-vue add --config ./config/modules.config.js",
    "preview": "cd ./dist && wya server"
  },
  "author": "wya-team",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "@wya/assist-vc": "^1.1.20",
    "@wya/assist-vm": "^1.0.13",
    "@wya/http": "^1.5.0",
    "@wya/ps": "^1.0.2",
    "@wya/qrcode": "^1.0.2",
    "@wya/sass": "^1.2.0",
    "@wya/socket": "^1.1.0",
    "@wya/utils": "^1.6.3",
    "@wya/vc": "^2.0.5",
    "@wya/vm": "^2.0.0",
    "core-js": "^3.6.5",
    "fast-xml-parser": "^3.17.4",
    "js-md5": "^0.7.3",
    "moment": "^2.27.0",
    "vue": "^2.6.11",
    "vue-router": "^3.3.4",
    "vuex": "^3.5.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-function-bind": "^7.10.5",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-jsx": "^7.10.4",
    "@babel/plugin-transform-block-scoping": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@wya/vc-loader": "^0.3.5",
    "@wya/vue-cli": "^1.0.11",
    "assets-webpack-plugin": "^5.0.3",
    "autoprefixer": "^9.8.5",
    "babel-eslint": "^10.1.0",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-transform-vue-jsx": "^4.0.1",
    "copy-webpack-plugin": "^6.0.3",
    "cp-cli": "^2.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.6.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.10.0",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-vue": "^7.7.0",
    "eslint-watch": "^7.0.0",
    "file-loader": "^6.0.0",
    "friendly-errors-webpack-plugin": "^2.0.0-beta.2",
    "fs-extra": "^8.1.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.3",
    "inquirer": "^7.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "mockjs": "^1.1.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-url": "^8.0.0",
    "precss": "^4.0.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^9.0.2",
    "sass-resources-loader": "^2.0.3",
    "shelljs": "^0.8.4",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-webpack-plugin": "^2.1.0",
    "url-loader": "^4.1.0",
    "vue-loader": "^15.9.3",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "~4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./config/commit-lint"
    }
  },
  "lint-staged": {
    "{src,config}/**/*.{js,jsx,vue}": [
      "esw --fix",
      "git add"
    ],
    "*.md": [
      "esw --ext '.md' --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix --syntax scss",
      "git add"
    ]
  }
}
